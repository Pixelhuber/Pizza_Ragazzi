# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# An example controller showing a sample home page
GET     /                           controllers.HomeController.index
# An example controller showing how to use dependency injection
GET     /count                      controllers.CountController.count
# An example controller showing how to write asynchronous code
GET     /message                    controllers.AsyncController.message

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(file)

GET     /highscore                  controllers.HomeController.highscore

GET     /profile                    controllers.HomeController.profile

GET     /login                      controllers.HomeController.login

GET     /createAccount              controllers.HomeController.createAccount

GET     /main                       controllers.HomeController.main


# HIGHSCORE ------------------------------------------------------------------------
GET     /highscore/getTableData     controllers.HighscoreController.getTableData

# PROFILE --------------------------------------------------------------------------
POST    /profile/updateUsername     controllers.ProfileController.setUsername(request: Request)

# Use this route for every getUsername call
GET     /getUsername                controllers.ProfileController.getUsernameFromSession(request: Request)

GET     /profile/getMail            controllers.ProfileController.getMailFromDatabase

GET     /profile/getGesamtpunkte    controllers.ProfileController.getGesamtpunkteFromDatabase

GET     /profile/getHighscore       controllers.ProfileController.getHighscoreFromDatabase

# LOGIN ----------------------------------------------------------------------------
POST    /authenticate               controllers.LoginController.authenticate(request: Request)

# PIZZA-RUSH -----------------------------------------------------------------------

GET     /pizza_rush/get_current_points  controllers.PizzaRushController.getCurrentPointsFromSession(requst: Request)
POST    /pizza_rush/validate_pizza      controllers.PizzaRushController.validatePizza(request: Request)
POST    /pizza_rush/reset_points        controllers.PizzaRushController.resetPoints(request: Request)